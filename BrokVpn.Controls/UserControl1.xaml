            <Style TargetType="ListBoxItem">
                <Setter Property="Width" Value="113" />
                <Setter Property="Height" Value="50" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <Grid>
                                    <Path
                                        x:Name="Right"
                                        HorizontalAlignment="Left"
                                        Data="{DynamicResource LeftButton}"
                                        Fill="{DynamicResource bgBorderInIn}"
                                        Stretch="Uniform"
                                        StrokeThickness="1" />
                                    <Path
                                        x:Name="Left"
                                        HorizontalAlignment="Right"
                                        Data="{DynamicResource RightButton}"
                                        Fill="{DynamicResource bgBorderInIn}"
                                        Stretch="Uniform"
                                        StrokeThickness="1" />

                                    <StackPanel Orientation="Horizontal">

                                        <StackPanel Margin="5" VerticalAlignment="Center">
                                            <Border
                                                x:Name="brdIcon"
                                                Width="25"
                                                Height="25"
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                Background="{DynamicResource bgActiveButton1}"
                                                CornerRadius="5">
                                                <Border.Effect>
                                                    <BlurEffect
                                                        KernelType="Gaussian"
                                                        Radius="10"
                                                        RenderingBias="Quality" />

                                                </Border.Effect>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                Text="Ping" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="5"
                                                Foreground="{Binding ElementName=brdIcon, Path=Background}"
                                                Text="Ping" />

                                        </StackPanel>
                                    </StackPanel>

                                    <Grid HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Ellipse
                                            Width="20"
                                            Height="20"
                                            Margin="-2"
                                            Fill="White"
                                            Opacity="0.4" />

                                    </Grid>
                                    <Rectangle
                                        x:Name="rectValue"
                                        Width="30"
                                        Height="1"
                                        Margin="2"
                                        VerticalAlignment="Bottom"
                                        RadiusX="5"
                                        RadiusY="5" />

                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">

                                    <Setter TargetName="Left" Property="Stroke" Value="Red" />
                                    <Setter TargetName="Right" Property="Stroke" Value="Red" />
                                    <Setter TargetName="rectValue" Property="Fill" Value="Red" />





                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
